<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_F0F0F0"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/avatar_def"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_zhuanzhang"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/shape_red_packet">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transfer_amount"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USDT  "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/edt_money"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="numberDecimal"
                android:digits="0123456789."
                android:maxLength="9"
                android:textStyle="bold"
                android:hint="@string/please_input_transfer_amount"
                android:background="@null"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_zhuanzhang"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/transfer"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_confirm_green6"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layout_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_red_packet"
        android:layout_margin="10dp"
        android:padding="10dp">
        <TextView
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/to_user"
            android:textColor="#000000"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/target"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_forward"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_red_packet"
        android:layout_margin="10dp"
        android:padding="10dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_red_packet"/>
        <TextView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/packet_count"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/packet_count"
            android:inputType="number"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="right"
            android:hint="@string/input_count"/>
        <TextView
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="@string/ge"/>
    </LinearLayout>

    <TextView
        android:id="@+id/info_group"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/packet_group_info"/>

    <LinearLayout
        android:id="@+id/ll_zhuanzhang2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_red_packet"
        android:layout_margin="10dp"
        android:padding="10dp"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_red_packet"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/info_price"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/one_price"
            android:textColor="#000000"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/price_input"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:maxLength="9"
            android:hint="@string/price_hint"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_luck"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_red_packet"
        android:layout_margin="10dp"
        android:padding="10dp">
        <TextView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/luck_no"
            android:textColor="#000000"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/luck_input"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:hint="0 - 9"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_zhuanzhang1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_red_packet"
        android:layout_margin="10dp"
        android:padding="10dp">
        <EditText
            android:id="@+id/text"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/bless"
            android:background="#ffffff"
            android:textSize="18sp"/>
        <ImageView
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_cheat_emo"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_red_packet"
        android:layout_margin="10dp"
        android:padding="10dp">
        <TextView
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/packet_head"
            android:textColor="#000000"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/cover"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_forward"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue1"
            android:text="@string/game_rule"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/quest_red"/>
    </LinearLayout>

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price_hint"
        android:textColor="#000000"
        android:textSize="36dp"
        android:gravity="center"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_red_packet_button"
        android:text="@string/set_packet"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"/>

    <TextView
        android:layout_margin="20dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/game_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
