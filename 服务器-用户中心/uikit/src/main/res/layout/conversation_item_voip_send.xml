<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img_bubble_send"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:autoLink="phone|email|map|web"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="16dp"
        android:linksClickable="true"
        android:textColor="#ffff"
        android:textColorLink="#3655bf"
        android:textSize="16sp"
        tools:text="Audio call" />

    <ImageView
        android:id="@+id/iv_audio"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_audio_call_white"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_video"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_video_call_white"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"/>
</LinearLayout>

